@model ASMHT_PH53971.Models.MonAn


<h1 class="text-center my-4 text-primary fw-bold">@Model.TenMonAn</h1>

<div class="container">
    <div class="row align-items-center shadow-lg rounded p-4 bg-light">
        <!-- Hình ảnh bên trái -->
        <div class="col-md-6 text-center">
            <img src="@Model.DuongDanHinh" class="img-fluid rounded" alt="@Model.TenMonAn"
                 style="object-fit: cover; width: 100%; max-height: 400px;">
        </div>

        <!-- Thông tin bên phải -->
        <div class="col-md-6">
            <h3 class="text-primary fw-bold">Mô tả</h3>
            <p class="text-muted">@Model.MoTa</p>

            <h4 class="text-danger fw-bold">Giá: @Model.Gia.ToString("N0") VND</h4>

            <h5 class="text-success fw-bold">Số lượng còn lại: @Model.Soluong</h5>

            <!-- Form thêm vào giỏ hàng -->
            <form action="@Url.Action("AddMonAn", "GioHang")" method="post" class="mt-3">
                <input type="hidden" name="maMonAn" value="@Model.MaMonAn" />
                <div class="form-group">
                    <label for="soLuong" class="fw-bold">Số lượng:</label>
                    <input type="number" name="soLuong" id="soLuong" value="1" min="1" max="@Model.Soluong"
                           class="form-control w-50 text-center" required />
                </div>
                <button type="submit" class="btn btn-primary mt-3 w-100">
                    <i class="bi bi-cart-plus"></i> Thêm vào giỏ hàng
                </button>
            </form>

            <a href="@Url.Action("Index", "KhachHang")" class="btn btn-secondary mt-3 w-100">
                <i class="bi bi-arrow-left"></i> Quay lại danh sách
            </a>
        </div>
    </div>
</div>
